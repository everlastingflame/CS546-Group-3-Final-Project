{{!< userProfiles}}
  
    <div class="blurred-background"></div>
    <div class="container">
      <div class="card card-main-content" style="width: 828px">
        <div class="card-body">
          <div class="row">
            <div class="col text-center">
              <h1>Invite users</h1>
            </div>
          </div>
          <div class="card card-drafts" style="width: 100%">
            <div class="card-body">
              <!--Pass in the ID with render-->
              <form id="inviteForm" action="#" method="POST">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input
                    type="username"
                    class="form-control"
                    id="Username"
                    name="Username"
                    placeholder="Enter username"
                  />
                </div>
                <button type="submit" class="btn btn-primary">Invite</button>
              </form>


                {{#if error}}
                <p id="serverError" class="alert alert-danger" role="alert">
                {{error}}
                </p>
                {{/if}}
                <div
                  id="error_container"
                  class="alert alert-danger" style="display: none;"
                  role="alert"
                ></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/public/js/inviteUsers.js"></script>
    <script src="/public/js/client_side_validation.js"></script>